<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="363dp"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="33dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtc_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="05.06.2018"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtc_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="00:01:45"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtc_date" />

            <TextView
                android:id="@+id/txtc_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="10 km"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/txtc_time"
                app:layout_constraintTop_toBottomOf="@+id/txtc_date" />

            <TextView
                android:id="@+id/txtc_co2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="2 g CO2"
                app:layout_constraintStart_toEndOf="@+id/txtc_tree"
                app:layout_constraintTop_toBottomOf="@+id/txtc_speed" />

            <TextView
                android:id="@+id/txtc_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="25 km/h"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/txtc_dist"
                app:layout_constraintTop_toBottomOf="@+id/txtc_date" />

            <TextView
                android:id="@+id/txtc_tree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="1 ağaç"
                app:layout_constraintStart_toEndOf="@+id/txtc_rev"
                app:layout_constraintTop_toBottomOf="@+id/txtc_speed" />

            <TextView
                android:id="@+id/txtc_rev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="134 tur"
                app:layout_constraintStart_toEndOf="@+id/txtc_power"
                app:layout_constraintTop_toBottomOf="@+id/txtc_dist" />

            <TextView
                android:id="@+id/txtc_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="13 W"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtc_time" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>